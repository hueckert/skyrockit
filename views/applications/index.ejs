<!-- views/applications/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Application</title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <h1>Company you apply</h1>
  <a href="/users/<%=user._id%>/applications/new">Add a company</a>

  <!-- Add the following for added company: -->
  <ul>
    <% applications.forEach((application)=>{ %>
      <li>
        <!-- Add a link around each application, directing to the 'show' page -->
        <a href="/users/<%= user._id %>/applications/<%= application._id %>">
            <%= application.title %> at <%= application.company %>
        </a>
      </li>
    <% }) %>
  </ul>

</body>
</html>